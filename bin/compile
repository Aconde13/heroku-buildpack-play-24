#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

# fail fast
set -e

# parse args
BUILD_DIR=$1
CACHE_DIR=$2

# chdir as maven expects
cd $BUILD_DIR

# unpack cache
for DIR in ".play"; do
  rm -rf $DIR
  if [ -d $CACHE_DIR/$DIR ]; then
    cp -r $CACHE_DIR/$DIR $DIR
  fi
done

# add jdbc converter tool

mkdir .tools
cat <<EOF > .tools/jdbcify
echo $1 | sed "s|postgres://\([^:][^:]*\):\([^@]*\)@\([^\/]*\)/\([^$]*\)|jdbc:postgresql://\3/\4?user=\1\&password=\2|"
EOF
chmod +x .tools/jdbcify

# install play with base repository
PLAY_URL="http://s3.amazonaws.com/lang-pack-play/play-1.2.1.tar.gz"

if [ ! -d .play ]; then
  echo -n "-----> Installing play!....."
  curl --silent --max-time 60 --location $PLAY_URL | tar xz
  chmod +x .play/play
  echo " done"
fi

if [ ! -f Procfile ]; then
  cat <<EOF > Procfile
web:    play run --%heroku --http.port=$PORT -Xmx512m -Ddatabase.url=`jdbcify $DATABASE_URL`
EOF
  echo "No Procfile found. Will use Procfile: "
  cat Procfile | sed -u 's/^/       /' 
fi

cat <<EOF >> conf/application.conf
%heroku.application.mode=prod
%heroku.db.url=${database.url}
%heroku.db.driver=org.postgresql.Driver
%heroku.jpa.ddl=update
EOF


# build app
echo "-----> Resolving dependencies and precompiling play! app..."
.play/play precompile --deps 2>&1 | sed -u 's/^/       /'
if [ "${PIPESTATUS[*]}" != "0 0" ]; then
  echo " !     Failed to build Play app"
  exit 1
fi

# repack cache
mkdir -p $CACHE_DIR
for DIR in ".play" ".tools"; do
  rm -rf $CACHE_DIR/$DIR
  cp -r $DIR $CACHE_DIR/$DIR
done
